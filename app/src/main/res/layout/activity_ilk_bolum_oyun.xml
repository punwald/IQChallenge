<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.punwald.iqchallenge.ilkBolumOyun">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/geri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btngeri"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-15dp"/>

            <TextView
                android:id="@+id/bolumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ems="5"
                android:text="#1"
                android:textAlignment="center"
                android:textSize="58dp"
                android:textColor="@color/ipucu"/>

            <Button
                android:id="@+id/ileri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btnileri"
                android:layout_marginRight="15dp"
                android:layout_marginTop="-15dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:orientation="vertical"
            android:weightSum="6"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/sifre1" />

            <EditText
                android:id="@+id/cevap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Cevap"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:inputType="number"/>

            <Button
                android:id="@+id/cevapButon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cevapla"
                android:background="@color/butonbg"
                android:textColor="@android:color/background_light"
                android:fontFamily="monospace"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/ipucuButon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/butonbg"
                android:text="İpucu"
                android:textColor="@android:color/background_light"
                android:fontFamily="monospace"
                android:padding="-5dp"/>

            <TextView
                android:id="@+id/ipucuText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:hint="***İpucu***"
                android:textAlignment="center"
                android:textColor="@color/ipucu"
                android:fontFamily="serif-monospace"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/reklam"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                android:padding="0dp"
                android:text="+1" />
        </LinearLayout>


    </RelativeLayout>

    </ScrollView>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1592029610374280/2676302567">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
