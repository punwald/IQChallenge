<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:id="@+id/layout">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/geri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btngeri" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bolumText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="5"
                android:text="#1"
                android:textAlignment="center"
                android:textColor="@color/ipucu"
                android:textSize="38dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/ileri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btnileri" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sekil1" />

        <EditText
            android:id="@+id/cevap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Cevap"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:inputType="number" />

        <Button
            android:id="@+id/cevapButon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cevapla"
            android:background="@color/butonbg"
            android:textColor="@android:color/background_light"
            android:fontFamily="monospace" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ipucuButon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/butonbg"
            android:text="İpucu"
            android:textColor="@android:color/background_light"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/ipucuText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:hint="***İpucu***"
            android:textAlignment="center"
            android:textColor="@color/ipucu"
            android:fontFamily="serif-monospace"
            android:textSize="20dp" />

        <Button
            android:id="@+id/reklam"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:text="+1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-1592029610374280/2676302567">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>

</LinearLayout>
